<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gruppo5.bibliosoft.controller.ControllerLibri">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <children>
        <HBox spacing="5">
            <children>
                <Label text="Ricerca:" />
                <TextField fx:id="campoRicerca" promptText="Titolo, autore o ISBN" />
                <Button onAction="#onRicerca" styleClass="primary-button" text="Trova" />
                <Pane HBox.hgrow="ALWAYS" />
                <Button onAction="#onAggiungi" text="Nuovo" />
                <Button onAction="#onModifica" text="Modifica" />
                <Button onAction="#onElimina" styleClass="danger-button" text="Elimina" />
            </children>
        </HBox>

        <TableView fx:id="tabellaLibri" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colIsbn" prefWidth="120" text="ISBN" />
                <TableColumn fx:id="colTitolo" prefWidth="220" text="Titolo" />
                <TableColumn fx:id="colAutori" prefWidth="180" text="Autori" />
                <TableColumn fx:id="colAnno" prefWidth="80" text="Anno" />
                <TableColumn fx:id="colCopieTot" prefWidth="70" text="Totali" />
                <TableColumn fx:id="colCopieDisp" prefWidth="70" text="Disp." />
            </columns>
        </TableView>
    </children>
</VBox>

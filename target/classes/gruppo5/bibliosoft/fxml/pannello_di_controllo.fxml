<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" stylesheets="@../css/stile_pannello_di_controllo.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gruppo5.bibliosoft.controller.ControllerPannelloControllo">
   <padding>
      <Insets bottom="10" left="10" right="10" top="10" />
   </padding>
   <children>
      <HBox alignment="CENTER_LEFT" spacing="20.0">
         <children>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img/icona_bibliosoft.png" />
               </image>
            </ImageView>
            <VBox alignment="CENTER_LEFT">
               <children>
                  <Label id="titolo" text="Bibliosoft" />
                  <Label text="Bentornato, Bibliotecario" />
               </children>
            </VBox>
         </children>
      </HBox>
      <VBox>
         <children>
            <Label styleClass="sottotitolo" text="Prestiti" />
            <HBox fillHeight="false" maxHeight="-Infinity" maxWidth="-Infinity" spacing="40.0" styleClass="rettangolo" VBox.vgrow="NEVER">
               <children>
                  <VBox>
                     <children>
                        <HBox alignment="CENTER" spacing="5.0">
                           <children>
                              <Label styleClass="statistica" text="In Ritardo" />
                              <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../img/rosso.png" />
                                 </image>
                              </ImageView>
                           </children>
                        </HBox>
                        <Label fx:id="prestitiInRitardo" text="--">
                           <styleClass>
                              <String fx:value="statistica" />
                              <String fx:value="contatore" />
                           </styleClass>
                        </Label>
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <HBox alignment="CENTER" spacing="5.0">
                           <children>
                              <Label styleClass="statistica" text="Conclusi" />
                              <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../img/verde.png" />
                                 </image>
                              </ImageView>
                           </children>
                        </HBox>
                        <Label fx:id="prestitiConclusi" text="--">
                           <styleClass>
                              <String fx:value="statistica" />
                              <String fx:value="contatore" />
                           </styleClass>
                        </Label>
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <HBox alignment="CENTER" spacing="5.0">
                           <children>
                              <Label styleClass="statistica" text="In Corso" />
                              <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../img/arancione.png" />
                                 </image>
                              </ImageView>
                           </children>
                        </HBox>
                        <Label fx:id="prestitiInCorso" text="--">
                           <styleClass>
                              <String fx:value="statistica" />
                              <String fx:value="contatore" />
                           </styleClass>
                        </Label>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
         <VBox.margin>
            <Insets left="20.0" />
         </VBox.margin>
      </VBox>
      <VBox>
         <children>
            <HBox spacing="30.0">
               <children>
                  <VBox>
                     <children>
                        <Label styleClass="sottotitolo" text="Libri" />
                        <HBox alignment="CENTER" spacing="40.0" styleClass="rettangolo">
                           <children>
                              <HBox alignment="CENTER" spacing="5.0">
                                 <children>
                                    <Label fx:id="libriTotali" text="--">
                                       <styleClass>
                                          <String fx:value="statistica" />
                                          <String fx:value="contatore" />
                                       </styleClass>
                                    </Label>
                                    <Label styleClass="statistica" text="Libri Totali" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER" spacing="5.0">
                                 <children>
                                    <Label fx:id="copieTotali" text="--">
                                       <styleClass>
                                          <String fx:value="statistica" />
                                          <String fx:value="contatore" />
                                       </styleClass>
                                    </Label>
                                    <Label styleClass="statistica" text="Copie Totali" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER" spacing="5.0">
                                 <children>
                                    <Label fx:id="copieDisponibili" text="--">
                                       <styleClass>
                                          <String fx:value="statistica" />
                                          <String fx:value="contatore" />
                                       </styleClass>
                                    </Label>
                                    <Label styleClass="statistica" text="Copie Disponibili" />
                                 </children>
                              </HBox>
                           </children>
                           <padding>
                              <Insets left="20.0" />
                           </padding>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label styleClass="sottotitolo" text="Utenti" />
                        <HBox alignment="CENTER" spacing="40.0" styleClass="rettangolo">
                           <children>
                              <HBox alignment="CENTER" spacing="5.0">
                                 <children>
                                    <Label fx:id="utentiTotali" text="--">
                                       <styleClass>
                                          <String fx:value="statistica" />
                                          <String fx:value="contatore" />
                                       </styleClass>
                                    </Label>
                                    <Label styleClass="statistica" text="Utenti Totali" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER" spacing="5.0">
                                 <children>
                                    <Label fx:id="utentiPrestitiAttivi" text="--">
                                       <styleClass>
                                          <String fx:value="statistica" />
                                          <String fx:value="contatore" />
                                       </styleClass>
                                    </Label>
                                    <Label styleClass="statistica" text="Utenti con prestiti attivi" />
                                 </children>
                              </HBox>
                           </children>
                           <padding>
                              <Insets left="20.0" />
                           </padding>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
         <VBox.margin>
            <Insets left="20.0" />
         </VBox.margin>
      </VBox>
   </children>
</VBox>

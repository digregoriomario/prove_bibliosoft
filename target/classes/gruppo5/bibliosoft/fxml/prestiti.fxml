<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gruppo5.bibliosoft.controller.ControllerPrestiti">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <children>
      <VBox fillWidth="false">
         <children>
              <HBox alignment="CENTER" spacing="5">
                  <children>
                      <Label text="Utente:" />
                      <ComboBox fx:id="comboUtente" prefWidth="220" />
                      <Label text="Libro:" />
                      <ComboBox fx:id="comboLibro" prefWidth="220" />
                      <Label text="Restituzione prevista:" />
                      <DatePicker fx:id="dataPrevista" prefHeight="27.0" prefWidth="130.0" />
                      <Button onAction="#onRegistraPrestito" styleClass="primary-button" text="Registra prestito" />
                  </children>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
              </HBox>
            <Separator prefHeight="0.0" prefWidth="895.0" VBox.vgrow="ALWAYS" />
            <HBox style="-fx-border-color: grey; -fx-border-radius: 5; -fx-background-color: lightgrey; -fx-background-radius: 5;">
               <children>
                  <Button mnemonicParsing="false" onAction="#mostraAttivi" styleClass="bottoni_filtro" text="Attivi" />
                  <Button mnemonicParsing="false" onAction="#mostraConclusi" styleClass="bottoni_filtro" text="Conclusi" />
                  <Button focusTraversable="false" mnemonicParsing="false" onAction="#mostraTutti" styleClass="bottoni_filtro" text="Tutti" />
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
         </children>
      </VBox>

        <TableView fx:id="tabellaPrestiti" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colUtente" prefWidth="180" text="Utente" />
                <TableColumn fx:id="colLibro" prefWidth="220" text="Libro" />
                <TableColumn fx:id="colInizio" prefWidth="100" text="Inizio" />
                <TableColumn fx:id="colPrevista" prefWidth="100" text="Prevista" />
                <TableColumn fx:id="colEffettiva" prefWidth="100" text="Effettiva" />
                <TableColumn fx:id="colStato" prefWidth="90" text="Stato" />
            </columns>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
        </TableView>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <children>
                <Button onAction="#onRegistraRestituzione" text="Restituisci selezionato" />
            </children>
        </HBox>
    </children>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" stylesheets="@../css/stile_viste.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gruppo5.bibliosoft.controller.ControllerUtenti">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <children>
                <TextField fx:id="campoRicerca" prefHeight="35.0" prefWidth="300" promptText="Cerca utente..." />
                <Button onAction="#onRicerca" prefHeight="35.0" prefWidth="60.0" styleClass="primary-button" text="Cerca" />
                <Pane HBox.hgrow="ALWAYS" />
                <Button onAction="#onAggiungi" text="Nuovo Utente" />
                <Button onAction="#onModifica" text="Modifica" />
                <Button onAction="#onStorico" text="Vedi Storico" />
                <Button onAction="#onElimina" styleClass="danger-button" text="Elimina" />
            </children>
        </HBox>

        <VBox styleClass="card" VBox.vgrow="ALWAYS">
            <children>
                <TableView fx:id="tabellaUtenti" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colMatricola" prefWidth="100" text="Matricola" />
                        <TableColumn fx:id="colCognome" prefWidth="150" text="Cognome" />
                        <TableColumn fx:id="colNome" prefWidth="150" text="Nome" />
                        <TableColumn fx:id="colEmail" prefWidth="200" text="Email" />
                        <TableColumn fx:id="colPrestiti" prefWidth="120" text="Prestiti Attivi" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </children>
</VBox>
